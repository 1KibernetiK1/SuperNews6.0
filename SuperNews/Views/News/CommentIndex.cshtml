@model SuperNews.Domains.Comment
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "CommentIndex";
}

<!-- /.card-header -->
<div class="card-body">

   

</div>
<!-- /.card-body -->
@if (Model == null)
{


    <!-- /.card-footer -->
    <div class="card-footer" style="text-align:right">
        <form asp-controller="News" asp-action="CreateComment" method="post">
            <div class="img-push" style="text-align:right">
                <input type="text" class="form-control form-control-sm"
                   asp-for="CommentText"
                       placeholder="Текст комментария">
                <div class="col-sm-7 offset-sm-3" style="float:right">
                    <button class="btn btn-primary" id="submit">нажмите</button>
                </div>
            </div>
        </form>
    </div>
}
else
{
    <div class="card-footer card-comments">

        <partial name="_CommentPartial" />

    </div>
    <div class="card-footer" style="text-align:right">
        <form asp-controller="News" asp-action="CreateComment" method="post">
       
            <div class="img-push">
                <input type="text" class="form-control form-control-sm"
                   asp-for="CommentText">
                <button class="btn btn-primary" id="submit">Нажмите</button>

            </div>
        </form>
    </div>
}